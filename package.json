    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "connect-slashes": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "elliptic": "^6.5.4",
    "express": "^4.17.1",
    "flat-cache": "^3.0.4",
    "flatted": "^3.1.1",
    "localtunnel": "^2.0.1",
    "lodash": "^4.17.21",
    "pubnub": "^4.29.11",
    "slashes": "^2.0.2",
    "uuid": "^8.3.2"
  }
